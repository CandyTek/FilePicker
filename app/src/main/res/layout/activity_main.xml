<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.zhangteng.base.widget.MyTabLayout
        android:id="@+id/mytablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMyIndicatorColor="?attr/colorAccent"
        app:tabMyIndicatorHeight="2dp"
        app:tabMyPaddingEnd="12dp"
        app:tabMyPaddingStart="12dp"
        app:tabMySelectedTextColor="@color/theme"
        app:tabMyTextColor="#939393"
        app:tabMyTextIconGap="3dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytablayout" />

</android.support.constraint.ConstraintLayout>